{
    "private": true,
    "scripts": {
        "dev": "concurrently npm:watch:a*",
        "watch:app": "php artisan serve --port=8000",
        "watch:api": "php artisan serve --port=8001",
        "devs": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "devDependencies": {
        "axios": "^0.21",
        "concurrently": "^7.5.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14"
    }
}
